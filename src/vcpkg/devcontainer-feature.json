{
    "name": "Vcpkg Tool",
    "id": "vcpkg",
    "version": "1.0.0",
    "description": "A vcpkg tool feature",
    "options": {
        "username": {
            "type": "string",
            "proposals": [
                "devcontainer",
                "vscode",
                "codespace",
                "none",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter name of a non-root user to configure or none to skip"
        },
        "vcpkgroot": {
            "type": "string",
            "proposals": [
                "/usr/local/vcpkg",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter VCPKGROOT for non-root user"
        },
        "vcpkgdownload": {
            "type": "string",
            "proposals": [
                "/usr/local/vcpkg-downloads",
                "automatic"
            ],
            "default": "automatic",
            "description": "Enter VCPKGDOWNLOAD for non-root user"
        }
    }
}